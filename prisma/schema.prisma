generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  username     String   @unique
  passwordHash String
  role         String   @default("User")
  createdAt    DateTime @default(now())
}

model Game {
  id      String  @id @default(uuid())
  name    String  @unique
  license String
}


